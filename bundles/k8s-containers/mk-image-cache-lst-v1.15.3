set -e

rook_103_version=v1.0.3
rook_106_version=v1.0.6
ceph_103_version=v14.2.0-20190410
ceph_106_version=v14.2.2-20191210

common="
	$KUBE_PROXY_V1153
	$PAUSE_31
	$COREDNS_131
	$WEAVE_KUBE_252
	$WEAVE_NPC_252
	$WEAVEEXEC_252
	$REGISTRY_262
	$ENVOY_V1100
	$CONTOUR_V0130
	rook/ceph:$rook_103_version
	rook/ceph:$rook_106_version
	ceph/ceph:$ceph_103_version
	ceph/ceph:$ceph_106_version
	$REPLICATED_HOSTPATH_PROVISIONER_CD1D272"

control="
	$KUBE_APISERVER_V1153
	$KUBE_CONTROLLER_MANAGER_V1153
	$KUBE_SCHEDULER_V1153
	$ETCD_3310"

oi() {
	local i="$1"
	digest=$(docker image inspect --format '{{index .RepoDigests 0}}' "${i}")
	echo "${i}@${digest#*@}"
}

list() {
	echo "# autogenerated by:"
	echo "#    $0 $@"
	for i in $pkgs ; do
		oi "$i"
	done
}

tag() {
	for i in $pkgs ; do
		id="$(docker image inspect --format '{{.Id}}' "${i}")"
		echo "docker tag ${id:7:12} ${i}"
	done
}

if [ $# -lt 1 ] ; then
    echo >&2 "Need exactly one of \`control-plane' or \`common'"
    exit 1
fi

case $1 in
    common)        pkgs="$common" ;;
    control-plane) pkgs="$control" ;;
esac

for i in $pkgs ; do
	docker image pull "$i" 1>&2
done

case $2 in
    tag) tag ;;
    *)   list ;;
esac
